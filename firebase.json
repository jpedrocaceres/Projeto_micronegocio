{
  "hosting": {
    "public": "src/pages",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "src/functions/**",
        "run": {
          "serviceId": "back-end-main",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "apphosting": {
    "backend": {
      "serviceId": "back-end-main",
      "source": ".",
      "runtime": "nodejs18",
      "env": {
        "PORT": "8080" 
      }
    }
  }
}