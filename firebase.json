{
  "hosting": {
    "public": "src/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "src/server.js",
        "run": {
          "serviceId": "back-end-main",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "apphosting": {
    "backend": {
      "serviceId": "back-end-main",
      "source": ".",
      "runtime": "nodejs18",
      "env": {
        "PORT": "8080",
        "NODE_ENV": "production"
      },
      "timeoutSeconds": 1000
    }
  }
}